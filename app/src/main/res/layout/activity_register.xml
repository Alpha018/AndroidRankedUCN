<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="ucn.afta.cl.rankeducn.Activity.Register">

    <EditText
        android:id="@+id/nombre"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/apellido"
        android:layout_alignStart="@+id/rut"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Nombre"
        android:drawableLeft="@drawable/ic_action_user"
        android:inputType="textPersonName"
        android:textColor="#FAFAFA"
        android:textColorHint="#FAFAFA"
        tools:ignore="MissingConstraints,TextFields"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="99dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/email"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/prompt_password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_action_pass"
        android:textColor="#FAFAFA"
        android:textColorHint="#FAFAFA"
        tools:ignore="MissingConstraints,TextFields"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="176dp" />

    <EditText
        android:id="@+id/rut"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/nombre"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="RUT"
        android:inputType="textPersonName"
        android:textColor="#FAFAFA"
        android:textColorHint="#FAFAFA"
        tools:ignore="MissingConstraints,TextFields"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="99dp" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Repetir Password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_action_pass"
        android:textColor="#FAFAFA"
        android:textColorHint="#FAFAFA"
        tools:ignore="MissingConstraints,TextFields"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="176dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/password"
        android:layout_alignStart="@+id/apellido"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="@string/prompt_email"
        android:drawableLeft="@drawable/ic_action_email"
        android:inputType="textPersonName"
        android:textColor="#FAFAFA"
        android:textColorHint="#FAFAFA"
        tools:ignore="MissingConstraints,TextFields"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="99dp" />

    <EditText
        android:id="@+id/apellido"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/email"
        android:layout_alignStart="@+id/nombre"
        android:layout_marginBottom="17dp"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="Apellido"
        android:inputType="textPersonName"
        android:textColor="#FAFAFA"
        android:textColorHint="#FAFAFA"
        tools:ignore="MissingConstraints,TextFields"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="99dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Registrar"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="31dp"
        android:padding="5dp"
        android:text="Volver"
        android:textColor="#FAFAFA"
        android:textSize="15sp" />

</RelativeLayout>
